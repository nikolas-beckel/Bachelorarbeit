{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext",
      "dom"
    ],
    "allowJs": true,
    "outDir": "components/",
    "rootDir": "components/",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "removeComments": true
  },
  "include": ["components/**/*"],
  "exclude": [
    "node_modules"
  ]
}
